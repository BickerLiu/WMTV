<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/home_back"
    android:orientation="vertical"
    tools:context="wanfang.bluemobi.com.wanfang.BeginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FF222A3D"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/title_background"
            android:drawableLeft="@mipmap/back"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@mipmap/fengexian_course"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="已选择"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/selectcolor"
            android:textSize="@dimen/title_text_size"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="条"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@mipmap/fengexian_course"/>

        <TextView
            android:id="@+id/tv_delect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/title_background"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="删除"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@mipmap/fengexian_course"/>

        <TextView
            android:id="@+id/tv_selectall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/title_background"
            android:focusable="true"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="全选"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_text_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@mipmap/fengexian"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView__fragment_popular"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:scrollbars="none" />
</LinearLayout>
