<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="30px"
    android:paddingRight="30px"
    >

    <LinearLayout
        android:id="@+id/ll_listgroup"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="102"
        android:background="#FF142030"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/ll_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"/>
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@mipmap/fengexian" />

        <ImageView
            android:id="@+id/iv_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/title_background"
            android:padding="20dp"
            android:scaleType="center"
            android:src="@mipmap/array_down" />
    </LinearLayout>

    <TextView
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@mipmap/fengexian_course" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="337"
        android:background="#FF142030"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">


        <FrameLayout
            android:id="@+id/fl_video"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="265"
            android:background="@drawable/collection_background"
            android:padding="2px">

            <ImageView
                android:id="@+id/iv_video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/image_loading" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="课程简介"
                android:textColor="@android:color/white"
                android:textSize="@dimen/title_text_size" />

            <TextView
                android:id="@+id/tv_video_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共   讲"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:lineSpacingMultiplier="1.5"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="@mipmap/fengexian_course" />

    <LinearLayout
        android:id="@+id/ll_teacher"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="211"
        android:background="#FF142030"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="讲师简介"
            android:textColor="@android:color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="150">

            <ImageView
                android:id="@+id/iv_teacher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/image_loading" />

            <TextView
                android:id="@+id/tv_teacher_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_teacher"
                android:background="#22000000"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="主讲： "
                android:textSize="@dimen/text_size"
                android:textColor="@android:color/white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_teacher"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="170"
            android:lineSpacingMultiplier="1.5"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
