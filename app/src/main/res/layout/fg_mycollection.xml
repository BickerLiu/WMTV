<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView__fragment_popular"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@mipmap/fengexian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF273041"
        android:gravity="center">

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@mipmap/fengexian_course" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/title_background"
            android:focusable="true"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp"
            android:text="编辑"
            android:textColor="@color/noselectcolor"
            android:textSize="@dimen/list1_text_size" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@mipmap/fengexian_course" />
    </LinearLayout>
</LinearLayout>
