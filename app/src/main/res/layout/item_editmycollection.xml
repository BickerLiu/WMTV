<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/collection_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:focusable="true"
        android:padding="20dp">

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/image_loading" />

        <TextView
            android:id="@+id/tv_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="2015高考数学真题解析"
            android:textSize="@dimen/list1_text_size"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_video"
        android:layout_toRightOf="@id/ll_video"></View>

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="51px"
        android:layout_height="51px"
        android:layout_below="@id/view"
        android:layout_toLeftOf="@id/view"
        android:background="@drawable/collection_select_background" />

</RelativeLayout>
