<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#273041"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="30px"
    android:paddingRight="30px">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/progressbar_updata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="204px"
                android:layout_height="204px"
                style="?android:attr/progressBarStyleLarge" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/updata_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo_update" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/auto_update"
            android:focusable="true"
            android:gravity="center"
            android:text="自动更新"
            android:textColor="@android:color/white"
            android:textSize="@dimen/list1_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.5"
            android:paddingLeft="@dimen/padding_50"
            android:paddingRight="@dimen/padding_50"
            android:paddingTop="@dimen/padding_20"
            android:text="新版本会修复原先版本中出现的BUG，并补充最新开发的功能，\n请及时更新到最新的版本，享受更加流畅、舒适的听课体验！"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

</LinearLayout>