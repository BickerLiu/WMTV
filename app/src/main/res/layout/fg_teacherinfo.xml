<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/padding_10"
    android:paddingRight="@dimen/padding_10"
    android:paddingTop="@dimen/padding_10">

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp"></View>

        <RelativeLayout
            android:id="@+id/rl_texhergroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView_teacherinfo_teacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_teacher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/imageView_teacherinfo_teacher"
                android:background="@mipmap/bg_name">

                <TextView
                    android:id="@+id/textView_teacherinfo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/padding_10"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_20">

            <TextView
                android:id="@+id/textView_teacherinfo_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.5"
                android:paddingLeft="@dimen/padding_10"
                android:text="ddddsdfsfds"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size" />
        </LinearLayout>



</LinearLayout>